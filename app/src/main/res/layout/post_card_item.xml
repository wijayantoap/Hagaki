<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTitle"
                android:text="Title"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textContent"
                android:text="Content - 150 Words"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTitle"
                android:layout_toLeftOf="@+id/view"
                android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/signaturePost"
                android:text="Signature"
                android:typeface="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/datePost"
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signaturePost"
                android:layout_marginLeft="15dp"/>

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:background="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"></View>

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/hagaki_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/view"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/textTitle"/>

            <android.support.v7.widget.CardView
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/reply_btn_img"
                    android:padding="5dp"/>

            </android.support.v7.widget.CardView>


        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

</RelativeLayout>